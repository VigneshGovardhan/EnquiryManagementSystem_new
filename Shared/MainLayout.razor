@inherits LayoutComponentBase

<div class="page">
    <div class="sidebar">
        <nav>
            <ul>
                <li><a href="/dashboard" class="@(IsActive("/dashboard") ? "active" : "")">Dashboard</a></li>
                <li><a href="/ems" class="@(IsActive("/ems") ? "active" : "")">Enquiry Management</a></li>
            </ul>
        </nav>
    </div>
    <div class="main">
        <div class="content">
            @Body
        </div>
    </div>
</div>

@code {
    private string? currentPath;

    protected override void OnInitialized()
    {
        // Get current path from navigation manager if available
    }

    private string IsActive(string path)
    {
        return currentPath == path ? "active" : "";
    }
}

